<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/transitions_container"
  android:layout_width="match_parent"
  android:layout_height="764dp"
  android:background="@drawable/background_color_animation"
  tools:context=".LaunchScreen">

  <LinearLayout
    android:id="@+id/bgdemo"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:background="@drawable/bgtest2"
    android:orientation="vertical"
    android:visibility="gone"></LinearLayout>

  <ImageView
    android:id="@+id/imagev"
    android:layout_width="216dp"
    android:layout_height="176dp"
    android:layout_gravity="start"
    android:layout_marginLeft="80dp"
    android:contentDescription="@string/todo"
    android:src="@drawable/cloud01"
    android:visibility="visible" />

  <VideoView
    android:id="@+id/videoView"
    android:layout_width="389dp"
    android:layout_height="629dp"
    android:layout_gravity="top|left|center"
    android:layout_marginLeft="-10dp"
    android:visibility="invisible" />

  <FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="730dp"
    android:layout_height="369dp"
    android:layout_gravity="top">

    <FrameLayout
      android:id="@+id/topShelf"
      android:layout_width="360dp"
      android:layout_height="match_parent"
      android:layout_gravity="start|end"
      android:layout_marginTop="130dp">

      <LinearLayout
        android:layout_width="360dp"
        android:layout_height="171dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:text="Username"
          android:textColor="@android:color/white" />

        <EditText
          android:id="@+id/tvTest"
          style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="left"
          android:accessibilityHeading="false"
          android:background="@drawable/rect_text_edit"

          android:ems="10"
          android:inputType="textPersonName"
          android:paddingLeft="10dp"
          android:textAppearance="@style/TextAppearance.AppCompat"
          android:textColor="@android:color/white"
          android:textSize="14sp" />

        <TextView
          android:id="@+id/textView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:text="Password"
          android:textColor="@android:color/white" />

        <EditText
          android:id="@+id/editText3"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@drawable/rect_text_edit"
          android:ems="10"
          android:inputType="textPassword"
          android:paddingLeft="10dp"
          android:textColor="@android:color/white" />
      </LinearLayout>

    </FrameLayout>

  </FrameLayout>

  <FrameLayout
    android:id="@+id/frameLayout2"
    android:layout_width="348dp"
    android:layout_height="362dp"
    android:layout_gravity="bottom"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:visibility="visible">

    <Button
      android:id="@+id/btnLogIn"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="90dp"
      android:background="@drawable/rect_button_selector"
      android:text="@string/log_in" />

    <TextView
      android:id="@+id/tvNewUser"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="140dp"
      android:gravity="center"
      android:text="@string/new_user"
      android:textColor="@android:color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <Button
      android:id="@+id/btnSignUp"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="160dp"
      android:background="@drawable/rect_button_border"
      android:text="@string/sign_up" />

    <Button
      android:id="@+id/btnConLogIn"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center"
      android:layout_marginTop="50dp"
      android:background="@drawable/rect_button"
      android:text="@string/sign_up" />

  </FrameLayout>

</FrameLayout>
